			when "JE"	then "Jersey"
			when "JM"	then "Jamaica"
			when "JO"	then "Jordan"
			when "JP"	then "Japan"
			when "JU"	then "Juan De Nova Island"
			when "KE"	then "Kenya"
			when "KG"	then "Kyrgyzstan"
			when "KH"	then "Cambodia"
			when "KI"	then "Kiribati"
			when "KM"	then "Comoros"
