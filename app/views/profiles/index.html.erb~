<!-- Menu Toggle Script -->
<script>
	$("#menu-toggle").click(function(e) {
	  e.preventDefault();
	  $("#wrapper").toggleClass("toggled");
	});
</script>

<script>
	var gallery = document.getElementById("gallery");
	var numPhotos = 0;
	<% @last_location_photos.each do |photo| %>
		gallery.innerHTML += '<div class="col-md-4"><div class="well">' +
			'<img class="thumbnail img-responsive" src=<%=photo.link%>>' + '</div></div>';
		numPhotos++;
	<% end %>
</script>
