	<div class="jumbotron">
		  <h1>Share your photos.</h1>
		  <p>Invite your friends from Facebook!</p>
	</div>

	<script>
	(function($) {
		$(document).bind("FBSDKLoaded", function() {
			FB.getLoginStatus(function(response) {
				if (response.status === "connected") {
					FB.api("/me/friends", function (response) {
						if (response && !response.error) {
							//console.log(response);
							document.getElementById("friends-list").innerHTML += 
							"You currently have " + response.summary.total_count + " friends on Hello World.";
							for (var i = 0; i < response.data.length; i++) {
								document.getElementById("friends").innerHTML += response.data[i].name;
								//console.log("top" + i);
								(function() {	//closure to ensure asynchronous calls to FB APIs is correct
									var j = i;
									FB.api("/" + response.data[j].id + "/picture", {
										"redirect": false,
										"height": "200",
										"type": "normal",
										"width": "200"
									},
									function (picResponse) {
										if (picResponse && !picResponse.error) {
											var picElement = document.getElementById("row1");
											//create div for portfolio column
											var HTML =  '<div class="col-md-4 portfolio-item"><img class=img-responsive src='+
											picResponse.data.url+'>'+'<h3><a href="#">' + response.data[j].name + '</a></h3></div>'
											//console.log("inside" + j);
											//place friend name and end the div
											picElement.innerHTML += HTML;
											console.log(picElement.innerHTML);
										}
									});
									//console.log(response.data.length + "and" + i);
								})();
							}
						}
					});
				}
			});
		});
	})(jQuery);
	</script>

	<div id="friends-list">
	<h1> Your friends are: </h1>
		<div id="friends"></div>
	</div>

